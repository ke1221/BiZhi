}
.cloud{ 
  padding-left: 26rpx;
  width:150rpx; height:54rpx; background:#7b90d2; 
  background:-webkit-linear-gradient(top,#7b90d2 5%,#f2f9f3 100%);
  background:-moz-linear-gradient(top,#7b90d2 5%,#d6f0fd 100%);
  background:-ms-linear-gradient(top,#7b90d2 5%,#d6f0fd 100%);
  background:-o-linear-gradient(top,#7b90d2 5%,#d6f0fd 100%);
  background:linear-gradient(top,#7b90d2 5%,#d6f0fd 100%);
  border-radius:45rpx;
  position:relative;
  margin:45rpx auto 9rpx;
 }
.cloud:after,.cloud:before{content:""; position:absolute; background:#7b90d2; z-index:-1;}
.cloud:after{ width:45rpx; height:45rpx; top:-22rpx; left:22rpx; border-radius:45rpx;}
.cloud:before{ width:82rpx; height:82rpx; top:-35rpx; right:22rpx; border-radius:90rpx;}

