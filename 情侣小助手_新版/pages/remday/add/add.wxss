.add-cont {
	width: 100%;
	padding: 30rpx 38rpx;
}

.cont-item {
	width: 100%;
	margin-bottom: 40rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.item-label {
	font-size: 32rpx;
	font-weight: bold;
	color: #242424;
}

.item-right {
	flex: 1;
	display: flex;
	align-items: center;
	justify-content: flex-end;
}

.right-input {
	text-align: right;
	font-size: 32rpx;
	color: #C0C0C0;
	width: 100%;
}

.right-icon {
	width: 40rpx;
	height: 40rpx;
	margin-left: 30rpx;
}

.right-switch {
	zoom: 0.8;
}

.textarea-cont {
	width: 100%;
}

.textarea {
	width: 674rpx;
	margin: 20rpx auto;
	padding: 20rpx;
	border: 1px solid #f2f2f2;
	font-size: 28rpx;
	color: #C0C0C0;
}

.textarea-placehoder {
	color: #C0C0C0;
}

.footer {
	width: 100%;
	padding: 30rpx 155rpx;
	font-size: 32rpx;
	font-weight: bold;
	text-align: center;
}

.footer-save {
	width: 100%;
	height: 90rpx;
	background-color: #FF6CA4;
	color: #FFFFFF;
	line-height: 90rpx;
	border-radius: 8rpx;
}

.footer-cancel {
	width: 100%;
	height: 90rpx;
	margin-top: 28rpx;
	background-color: #EFEFEF;
	color: #A6A6A6;
	line-height: 90rpx;
	border-radius: 8rpx;
}