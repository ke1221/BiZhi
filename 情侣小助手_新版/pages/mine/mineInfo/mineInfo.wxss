.contain {
	background-color: fff;
}

.user {
	background-color: #FF6CA4;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-wrap: wrap;
}

.user-head {
	display: flex;
	align-items: center;
	flex-direction: column;
}

.head-warp {
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
	background-color: rgba(255, 255, 255, 0.2);
	border: 12rpx solid rgba(255, 255, 255, 0.2);
	margin: 68rpx 0 101rpx 0;
}

.head-img {
	overflow: hidden;
	width: 100%;
	height: 100%;
	border-radius: 50%;
}

.head-name {
	color: #FFFFFF;
	font-size: 32rpx;
	font-weight: bold;
	padding-top: 20rpx;
	display: inline-block;
	width: 100%;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	text-align: center;
}


.add-cont {
	width: 100%;
	padding: 58rpx 48rpx 0 58rpx;
}

.cont-item {
	width: 100%;
	margin-bottom: 48rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.item-label {
	font-size: 32rpx;
	font-weight: bold;
	color: #242424;
}

.item-right {
	flex: 1;
	display: flex;
	align-items: center;
	justify-content: flex-end;
}

.right-input {
	text-align: right;
	font-size: 32rpx;
	color: #C0C0C0;
	width: 100%;
}

.right-icon {
	width: 40rpx;
	height: 40rpx;
	margin-left: 30rpx;
}


.menu {
	width: 100%;
	display: flex;
	flex-flow: column;
	align-items: center;
	justify-content: center;
}
.button{
	margin-top: 110rpx;
	background:rgba(239,239,239,1);
	height: 90rpx;
	width: 440rpx;
	border: 1px;
	border-radius:9px;
	display: flex;
	align-items: center;
	justify-content: center;
}
.edit-button{
	background:rgba(239,239,239,1);
}
.save-button{
	background:rgba(255,108,164,1);
}
.button-text{
	color: #A6A6A6;
	font-size: 32rpx;
}