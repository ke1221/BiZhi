}

/* 固定导航 */
.fiexd-nav {
  width: 100%;
  padding: 0 30rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
  background: #fff;
  display: flex;
  height: 80rpx;
  align-items: center;
  justify-content: space-around;
}

/* 固定导航 子项 */
.fiexd-nav .item{
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

/* 固定导航 选中 */
.fiexd-nav .act{
  font-weight: bold;
  color: #333;
  position: relative;
}

/* 固定导航 选中 横条 */
.fiexd-nav .act::after{
  content: '';
  display: inline-block;
  width: 100%;
  height: 2rpx;
  background: #333;
  position: absolute;
  bottom: -3rpx;
  left: 0;
}

/* 最新内容 或 精选 */
.scr-top {
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: flex-start;
}

/* tab栏 不固定 */
.scr-top .fiexd-nav{
  background: none;
  position: static;
  padding: 0 0 20rpx;
  z-index: 0;
}

/* 精选下面 图片 */
.scr-top .list-img{
  width: 210rpx;
  margin-right: 30rpx;
  height: 385rpx;
  margin-bottom: 30rpx;
}

/* 精选下面 逢3 去掉右边距 */
.scr-top .list-img:nth-of-type(3n){
  margin-right: 0;
}