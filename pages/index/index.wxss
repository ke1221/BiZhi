/* 外层容器 */
.home{
  width: 100%;
  padding: 30rpx;
}

/* 空白 */
.br{
  height: 30rpx;
}

/* 顶部轮播 */
swiper {
  width: 100%;
  height: 325rpx;
  padding: 0;
  background: #F9F9F9;
  box-shadow: 0 0 8rpx #999;
  border-radius: 8rpx;
}

/* 轮播内部 */
swiper-item {
  /* padding-right: 30rpx; */
  box-sizing: border-box;
}

/* 轮播图片 */
.swiper-img {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

/* 分类导航 */
.top-nav{
  width: 100%;
  height: 140rpx;
  color: #666;
  display: flex;
  align-items: stretch;
  justify-content: space-between;
}

/* 单个分类 */
.top-nav .item{
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 字体图标 大小 */
.item .iconfont{
  font-size: 50rpx;
}

/* 文字大小 */
.item .info{
  line-height: 40rpx;
  font-size: 24rpx;
}

/* 最新专题 */
.new-list{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
}

/* 标题左边 */
.new-list .l-left{
  color:  #333;
}

/* 标题右边 */
.new-list .l-right{
  color:  #666;
}

/* 滑动 */
scroll-view{
  width: 100%;
  height: 180rpx;
  display: flex;
  /* align-items: center; */
  flex-wrap: nowrap;
}
