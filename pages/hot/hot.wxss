/* 外层容器 */

.warp {
  width: 100%;
  padding: 30rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-between;
}

/* 单个样式 */

.item {
  width: 48%;
  padding-bottom: 10rpx;
  margin-bottom: 25rpx;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}

/* 图片 */

.item .img {
  width: 100%;
  height: 200rpx;
  margin-bottom: 10rpx;
  box-shadow: 0 0 10rpx #333;
}

/* 标题 */

.item .title {
  width: 100%;
  padding: 5rpx 10rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 时间 */

.item .info {
  font-size: 28rpx;
  font-weight: 400;
  color: #999;
  text-align: right;
}